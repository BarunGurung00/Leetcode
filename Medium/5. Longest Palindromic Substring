import java.util.*;

class Solution {
    public String longestPalindrome(String s) {
       String str = "";
       int len = 0;
        
        for(int i=0; i< s.length(); i++){
            
            //For odd longest palindrome
            int l = i;
            int r = i;
            
            while(l>=0 && r<s.length() && s.charAt(l) == s.charAt(r)){
                if((r - l + 1) > len){
                    str = s.substring(l, r + 1);
                    len = r - l + 1;
                }
                
                l--;
                r++;
            }
            
            //For even longest palindrome
              l = i;
              r = i + 1;
            
            while(l>=0 && r<s.length() && s.charAt(l) == s.charAt(r)){
                if((r - l + 1) > len){
                    str = s.substring(l, r + 1);
                    len = r - l + 1;
                }
                
                l--;
                r++;
            }
        }
        return str;
   }
}





    
